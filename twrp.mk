TW_NO_SCREEN_TIMEOUT := true
TW_NO_CPU_TEMP := true
TW_EXCLUDE_MTP := true
TW_INCLUDE_NTFS_3G := true
TW_EXCLUDE_SUPERSU := true
TW_EXTRA_LANGUAGES := true
TW_BRIGHTNESS_PATH := "/brightness"
